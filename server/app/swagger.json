{
  "openapi": "3.0.0",
  "info": {
    "title": "LevMusica API",
    "version": "1.0.0",
    "description": "This API is responsible for the creation and storage of the Spotify token response."
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "LevMusica API entry point"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "API Status",
        "description": "Returns the status of the API.",
        "responses": {
          "200": {
            "description": "API is running and ready"
          }
        }
      }
    },
    "/login": {
      "get": {
        "summary": "Spotify Login Redirect",
        "description": "Redirects user to Spotify's authorization page for login.",
        "tags": ["Auth"],
        "responses": {
          "302": {
            "description": "Redirect to Spotify's authorization page",
            "headers": {
              "Location": {
                "description": "URL to which the user is redirected",
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/callback": {
      "post": {
        "summary": "Spotify Callback",
        "description": "Handles the OAuth callback from Spotify and stores the access token.",
        "tags": ["Auth"],
        "parameters": [
          {
            "in": "query",
            "name": "code",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Authorization code provided by Spotify after login."
          }
        ],
        "responses": {
          "302": {
            "description": "Redirect to the home page after successful authentication",
            "headers": {
              "Location": {
                "description": "URL to which the user is redirected (e.g., http://localhost:5173/)",
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request or error during authentication",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error message returned by the server"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/token": {
      "get": {
        "summary": "Get Stored Spotify Token",
        "description": "Returns the stored Spotify token details such as access token, refresh token, and expiration.",
        "tags": ["Token"],
        "responses": {
          "200": {
            "description": "Successful response with the token details.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          },
          "404": {
            "description": "Token not found or not yet created."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Token": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "description": "Spotify access token"
          },
          "tokenType": {
            "type": "string",
            "description": "Token type (e.g., Bearer)"
          },
          "expiresIn": {
            "type": "integer",
            "description": "Token expiration time in seconds"
          },
          "refreshToken": {
            "type": "string",
            "description": "Refresh token provided by Spotify"
          },
          "scope": {
            "type": "string",
            "description": "Scope of the token"
          }
        }
      }
    }
  }
}
